@{
    ViewData["Title"] = "Seleccionar Modo de Juego";
}

<div class="home-container">
    <h1 class="title">Selecciona el Modo de Juego</h1>
    <p class="subtitle">Elige entre jugar 2 o 4 jugadores</p>

    <div class="options-grid">
        
        <form asp-controller="Game" asp-action="StartGame" method="post" class="option-card-form">
            <input type="hidden" name="mode" value="2" />
            <div class="icon-circle two-players">
                <i class="bi bi-people-fill"></i>
            </div>
            <h3>Dos Jugadores</h3>
            <p>Juega contra otro jugador. Primer jugador usa círculos (○), segundo usa cruces (×).</p>
            <button type="submit" class="btn btn-game">Jugar 2 Jugadores</button>
        </form>

        <form asp-controller="Game" asp-action="StartGame" method="post" class="option-card-form">
            <input type="hidden" name="mode" value="4" />
            <div class="icon-circle four-players">
                <i class="bi bi-people"></i>
            </div>
            <h3>Cuatro Jugadores</h3>
            <p>Juega en equipos de dos. Equipo A (Jugadores 1 y 3) usa círculos, Equipo B (2 y 4) usa cruces.</p>
            <button type="submit" class="btn btn-game">Jugar 4 Jugadores</button>
        </form>

    </div>

    <div class="mt-4">
        <a asp-controller="Home" asp-action="Index" class="btn btn-back">Volver al Inicio</a>
    </div>
</div>

