@model List<Server.Models.Game>
@{
    ViewData["Title"] = "Historial de Partidas";
}

<div class="home-container">
    <h1 class="title">Historial de Partidas Finalizadas</h1>
    <p class="subtitle">Revisa tus partidas, duración y resultados de manera rápida</p>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info mt-4">
            No hay partidas finalizadas aún.
        </div>
    }
    else
    {
        <div class="history-grid">
            @foreach (var game in Model)
            {
                <div class="history-card">
                    <div class="history-card-header">
                        <span class="history-date">@game.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</span>
                        <span class="history-mode badge">@((game.Mode == Server.Models.GameMode.TwoPlayers) ? "Dos Jugadores" : "Cuatro Jugadores")</span>
                    </div>
                    <div class="history-card-body">
                        <p><strong>Duración:</strong> @(game.Duration?.ToString(@"hh\:mm\:ss") ?? "N/A")</p>
                        <p>
                            <strong>Resultado:</strong>
                            @switch (game.Status)
                            {
                                case Server.Models.GameStatus.WonByPlayer1:
                                    <span class="badge badge-success">Ganó Jugador 1</span>
                                    break;
                                case Server.Models.GameStatus.WonByPlayer2:
                                    <span class="badge badge-success">Ganó Jugador 2</span>
                                    break;
                                case Server.Models.GameStatus.WonByTeamA:
                                    <span class="badge badge-success">Ganó Equipo A</span>
                                    break;
                                case Server.Models.GameStatus.WonByTeamB:
                                    <span class="badge badge-success">Ganó Equipo B</span>
                                    break;
                                default:
                                    <span class="badge badge-secondary">Finalizada</span>
                                    break;
                            }
                        </p>
                    </div>
                    <div class="history-card-footer">
                        <a asp-action="View" asp-route-id="@game.Id" class="btn btn-view">Ver partida</a>
                    </div>
                </div>
            }
        </div>
    }

    <div class="mt-4">
        <a asp-controller="Home" asp-action="Index" class="btn btn-back">Volver al Inicio</a>
    </div>
</div>
