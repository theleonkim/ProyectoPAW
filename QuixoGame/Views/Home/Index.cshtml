@{
    ViewData["Title"] = "Inicio";
}

<div class="home-container">
    <h1 class="title">Q-U-I-X-O</h1>
    <p class="subtitle">Crea una línea de cinco cubos con tu símbolo para ganar</p>

    <div class="options-grid">
        
        <a asp-controller="Game" asp-action="SelectMode" class="option-card">
            <div class="icon-circle">
                <i class="bi bi-controller"></i>
            </div>
            <h3>Nueva Partida</h3>
            <p>Inicia una partida para 2 o 4 jugadores</p>
        </a>

        <a asp-controller="History" asp-action="Index" class="option-card">
            <div class="icon-circle">
                <i class="bi bi-clock-history"></i>
            </div>
            <h3>Historial</h3>
            <p>Revisa y exporta partidas anteriores</p>
        </a>

        <a asp-controller="Statistics" asp-action="Index" class="option-card">
            <div class="icon-circle">
                <i class="bi bi-bar-chart-line"></i>
            </div>
            <h3>Estadísticas</h3>
            <p>Datos de jugadores y equipos</p>
        </a>

    </div>
</div>

